<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/scorelistnumber_id"
        android:layout_width="0dp"
        android:layout_weight=".10"
        android:layout_height="wrap_content"
        android:text="55"
        android:textSize="20sp"
        android:layout_marginHorizontal="5dp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".50">

        <TextView
            android:id="@+id/namelist_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nitesh"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/catlist_id"
            android:layout_below="@+id/namelist_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cartoon and Animation"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/difflist_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/catlist_id"
            android:text="Any Difficulty"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/typelist_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/catlist_id"
            android:layout_toRightOf="@+id/difflist_id"
            android:paddingLeft="10dp"
            android:text="Multiple Choice"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/scorelist_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".15"
        android:text="500"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="40sp" />

</LinearLayout>